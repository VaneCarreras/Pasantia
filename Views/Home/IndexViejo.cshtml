@section Scripts{
    <script src="~/js/leaflet-1.9.4.js"></script>

    <script>
        //**************************************************
        //ARMAMOS EL MAPA DE LEAFLET MAP CON LAS UBICACIONES
        //**************************************************
        document.addEventListener('DOMContentLoaded', function () {
            // Array con las ubicaciones y la información de la marca
            var locations = [
                {
                    coordinates: [-30.71013964260465, -62.00385528798773],
                    popupText: '(Sucursal 2)'
                },
                {
                    coordinates: [-30.726324393229982, -61.99535505977691],
                    popupText: '(Sucursal 1)'
                }
                // Agrega más ubicaciones si es necesario
            ];

            // Crea el mapa
            var map = L.map('leaflet-map').setView([-32.7, -62.0], 14);
            // var map = L.map('leaflet-map').setView(locations[0].coordinates, 13);

            // Agrega un proveedor de mapas (puedes cambiar a otros proveedores)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors'
            }).addTo(map);

            // Itera sobre las ubicaciones y agrega las marcas al mapa con el ícono de Bootstrap
            locations.forEach(function (location) {
                L.marker(location.coordinates, { icon: L.divIcon({ className: 'bi bi-geo-alt-fill' }) }).addTo(map)
                    .bindPopup(location.popupText)
                    .openPopup();
            });
        });

    </script>
